<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/reservar_cancelar_Agendamentos"
    android:orientation="vertical">
    <TextView
        android:id="@+id/dataAgendamentoTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data Agendamento"
        style="@style/Label"/>

    <EditText
        android:id="@+id/dataAgendamentoEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        style="@style/Label"/>

    <TextView
        android:id="@+id/textViewNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome"
        style="@style/Label"/>

    <EditText
        android:id="@+id/editTextNomeReservado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:inputType="textPersonName"
        android:hint="Nome"
        android:text="" />

    <TextView
        android:id="@+id/horarioTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HorÃ¡rio Agendamento"
        style="@style/Label"/>

    <ListView
        android:id="@+id/horariosListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:choiceMode="singleChoice"/>

    <Button
        android:id="@+id/buttonAgendamento"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:background="@drawable/round_button"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:text="Agendar" />
</LinearLayout>
