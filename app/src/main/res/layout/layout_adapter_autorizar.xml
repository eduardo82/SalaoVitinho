<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layoutLinearDados"
        android:layout_width="321dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textViewDataHoraSolicitada"
            android:layout_width="321dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="3dp"
            android:text="TextView"
            android:textSize="18sp"
            android:textStyle="bold" />


    </LinearLayout>

    <CheckBox
        android:id="@+id/checkBoxAcao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/layoutLinearDados"
        android:layout_alignBottom="@+id/textViewSolicitante"
        android:textColorLink="@color/colorPrimary"
        android:buttonTint="@color/colorPrimary"/>


    <TextView
        android:id="@+id/textViewSolicitante"
        android:layout_width="321dp"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:paddingBottom="5dp"
        android:paddingTop="3dp"
        android:text="TextView"
        android:textSize="15sp"
        android:layout_below="@+id/layoutLinearDados"
        android:layout_alignParentStart="true" />
</RelativeLayout>