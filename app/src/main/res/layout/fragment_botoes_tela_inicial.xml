<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/solicitacoesBotao"
            style="@style/BotaoInicial"
            android:background="@drawable/initial_button"
            android:drawableTop="@drawable/image_olho"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:text="Solicitações" />

        <Button
            android:id="@+id/marcadosBotao"
            style="@style/BotaoInicial"
            android:drawableTop="@drawable/image_cadastro"
            android:background="@drawable/initial_button"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:text="Marcados Hoje" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/reservarBotao"
            style="@style/BotaoInicial"
            android:background="@drawable/initial_button"
            android:drawableTop="@drawable/image_reservar"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:text="Reservar/Cancelar" />

        <Button
            android:id="@+id/agendaBotao"
            style="@style/BotaoInicial"
            android:background="@drawable/initial_button"
            android:drawableTop="@drawable/image_agenda"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:text="Agenda" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/telefonesBotao"
            style="@style/BotaoInicial"
            android:drawableTop="@drawable/image_telefone"
            android:background="@drawable/initial_button"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:text="Telefones" />

        <Button
            android:id="@+id/sairBotao"
            style="@style/BotaoInicial"
            android:drawableTop="@drawable/image_sair"
            android:background="@drawable/initial_button"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:text="Sair" />
    </LinearLayout>

</LinearLayout>